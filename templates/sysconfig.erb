export GLOBUS_TCP_PORT_RANGE="<%= @globus_tcp_port_range %>"
<%else -%>
GLOBUS_TCP_PORT_RANGE="<%= @globus_tcp_port_range %>"
<% end -%>
<% end -%>

<%if @globus_udp_port_range.to_s!='' -%>
