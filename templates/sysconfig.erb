<%if @configfile.to_s!='' -%>conf=<%= @configfile %><% end -%>

<%if @configdir.to_s!='' -%>confdir=<%= @configdir %><% end -%>

<%if scope['operatingsystemmajrelease'] == '6' -%>
export GLOBUS_THREAD_MODEL="<%= @thread_model %>"
export GLOBUS_GSSAPI_FORCE_TLS=<%= @force_tls %>
<%else -%>
GLOBUS_THREAD_MODEL="<%= @thread_model %>"
